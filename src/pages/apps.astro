---
import Main from "@/layouts/Main.astro";
import Layout from "@/layouts/Layout.astro";
import Header from "@/components/Header.astro";
import Footer from "@/components/Footer.astro";
import { SITE } from "@/config";
---

<Layout title={`应用 | ${SITE.title}`}>
  <Header />
  <Main pageTitle="应用" pageDesc="一些有趣的小应用">
    <div class="space-y-8">
      <div>
        <h2 class="text-xl font-semibold">
          <a
            href="https://moviewikia.com?utm_source=oscar&utm_medium=blog"
            target="_blank"
            class="hover:text-accent"
          >
            Movie Wikia
          </a>
        </h2>
        <p class="mt-2 opacity-80">记住电影 — 电影记忆/百科应用</p>
      </div>
      <div>
        <h2 class="text-xl font-semibold">猜电影</h2>
        <p class="mt-2 opacity-80">微信小程序 — 猜电影名</p>
        <img
          src="/assets/img/guess_movie.png"
          width="200"
          alt="猜电影小程序码"
          class="mt-4"
        />
      </div>
    </div>
  </Main>
  <Footer />
</Layout>
